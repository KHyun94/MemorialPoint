<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EmailAuthFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/signUpFrag1_Relative1"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/border_square"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/signUpFrag1_certificationEditNum"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:ems="4"
                android:maxLength="6"
                android:text="abcdefg"
                android:textSize="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/signUpFrag1_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/signUpFrag1_certificationEditNum"
                android:text="3:00" />


        </RelativeLayout>

        <TextView
            android:id="@+id/signUpFrag1_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/signUpFrag1_Relative1"
            android:layout_alignParentRight="true"
            android:text="재전송" />

        <RelativeLayout
            android:id="@+id/signUpFrag1_Relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_below="@+id/signUpFrag1_Relative1"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/signUpFrag1_certificationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn"

                android:text="인증"/>



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"/>

    </RelativeLayout>


</FrameLayout>